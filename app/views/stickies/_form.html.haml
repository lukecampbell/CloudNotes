= form_for(@sticky) do |f|
   -if @sticky.errors.any?
      .box{:id=>:error}
         %h2 #{pluralize(@sticky.errors.count, "error")} prohibited this sticky from being saved.
         %ul
            - @sticky.errors.full_messages.each do |msg|
               %li= msg
   .box
